<button @onclick="GoBackToList" type="button"  class="mt-4 mb-4 shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded">
    Back to List
</button>

@code {
    Game game;
    [Parameter] public int id { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        game = await GameService.GetGameById(id);

        if (game == null)
        {
            NavigationManager.NavigateTo("/error");
        }
    }
    
    void GoBackToList()
    {
        NavigationManager.NavigateTo("/view-accounts");
    }

}